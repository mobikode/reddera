

<div class="modal fade" id="myModal_login" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    Ã—</button>
                <h2 class="modal-title">
                    Login </h2>
            </div>
             <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                         <form class="modelform">
                         
                    <div class="col-sm-12">
                       <label for="email" class="control-label">Email</label>
                      <!--  <input type="email" class="form-control" id="email"  /> -->
                        <%= f.email_field :email, autofocus: true, class: "form-control",:required=>true%>
                      </div>
                       
                                    <div class="col-sm-12">
                      <label for="password" class="control-label">Password</label>
                        <%= f.password_field :password, autocomplete: "off", class: "form-control",:required=>true%>
                                        <!-- <input type="password" class="form-control" id="password"  /> -->
                                    </div>
                  
                               
                                    <div class="col-sm-6 col-sm-offset-3 ">
                                       <%= f.submit "Log In", class: "btn-confirm btn btn-small btn-primary"%>
                                       <!--  <button type="button" class="btn-sm signup-frm">
                                            Login</button>
                                         -->
                                    </div>
                                <%end%>
                                </form>
                         <div class="col-md-12">
               <a href="<%= professional_sign_up_path %>" class=""><p>Not regisred? Sing-up here as a</p></a> <span class="lgform">Client</span> or <span class="lgform"> Professional<span></p>
              <div class="col-md-5 hrlinr-l"><hr></div> <div class="col-md-1 hrlinr">OR</div> <div class="col-md-5 hrlinr-r"><hr></div>
             </div>
                       
                    <div class="col-md-12">
                        <div class="row text-center sign-with">
                            <div class="col-md-6">
                                <div class="btn-group btn-group-justified">
                                   
                                    <%= image_tag("FB_L.png", class:"group-tb-i")%>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group btn-group-justified">
                                      <%= image_tag("G_L.png", class:"group-tb-i")%>
                                        
                    
                           </div>
                                </div>
                        </div>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>
</div>
</div>


<script type="text/javascript">
    $(".stylistsignup").on("click", function () {
        if($('.Login').is(':visible')){
            $('#myModal_login').modal('hide');
            $('#myModal_stylist_signup').modal('show');
        }
    });
    $(".signup").on("click", function () {
        if($('.Login').is(':visible')){
            $('#myModal_login').modal('hide');
            $('#myModal_signup').modal('show');
        }
    });
</script>


